<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!--<title>Registration Form in HTML CSS</title>-->
    <!---Custom CSS File--->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />

    <link rel="stylesheet" href="/css/admission.css" />
  </head>
  <body>
    <section class="header">
      <section class="container">
          <div class="filter">
            <a href="/index"><i class="fas fa-angle-double-left"></i>  Back</a>
          </div>
           {{#if msg}}
            <p class={{type}}>{{msg}}</p>
          {{/if}}
         
        <header>Update Form</header>
          
        <form action="/auth/update?id={{id}}" method="post" class="form">
         
          <div class="input-box">
            <label>Full Name</label>
            <input  type="text" name="name"  placeholder="Enter full name" value={{find.name}} required />
          </div>
          <div class="input-box">
            <label>Email Address</label>
            <input type="email" name="email" placeholder="Enter email address" value={{find.email}} required />
          </div>

          <div class="column">
            <div class="input-box">
              <label>Phone Number</label>
              <input type="number" name="number" placeholder="Enter phone number" value={{find.number}} required />
            </div>
            <div class="select-box">
             
              <select name="course" id="" value={{find.course}}  required>
                {{#if find}}
                <option hidden>{{find.course}}</option>
                {{/if}}
                <option hidden> Course</option>
                <option >B.Com</option>
                <option>BCA</option>
                <option>BSC</option>
                <option>B.E</option> 
                <option>B.Tech</option>
                <option>BBA</option>
                <option>MBA</option>
                <option>M.Com</option>
                <option>MSC</option>
                <option>MCA</option>
                <option>M.Tech</option>
                <option>MBBS</option>
                <option>EEE</option>
                <option>CE</option>
                <option>CSE</option>
                <option>IT</option>
                
              </select>
            </div>
             
          </div>
          <div class="gender-box">
            <h3>Gender</h3>
            <div class="gender-option">
              <div class="gender">
                <input type="radio" id="check-male" name="gender" value="Male" {{#if male}} checked {{/if}} required />
                <label for="check-male">male</label>
              </div>
              <div class="gender">
                <input type="radio" id="check-female" name="gender" value="Female" {{#if female}} checked {{/if}} required/>
                <label for="check-female">Female</label>
              </div>  
            
            </div>  
          </div>
          <div class="input-box address">
            <label>Address</label>
            <input type="text" name="address" placeholder="Enter street address" value={{find.address}} required />
          
            <div class="column">
              <input type="text" name="city" placeholder="Enter your city" value={{find.city}} required />
              <input type="text" name="state" placeholder="Enter state" value={{find.state}} required />
              
            </div>
          </div>
          <button>Apply</button>
          
        </form>
      </section>
    </section>
  </body>
</html>